#go@ plink d10 -t sh sdk/c/luajit/build
#!/bin/sh
cd "${0%build}" || exit 1

set -e
cd src/src || exit 1

build() {

	local CFLAGS="$CFLAGS \
	-msse4.2 \
	-DALLEGORY_BUILD \
	-DLUAJIT_ENABLE_GC64 \
	-DLUAJIT_ENABLE_LUA52COMPAT \
	-DLUA_PATH_DEFAULT='\"$LUA_PATH_DEFAULT\"' \
	-DLUA_CPATH_DEFAULT='\"$LUA_CPATH_DEFAULT\"' \
	-I. \
	-DLUAMISC_API=LUA_API \
	"

	local bindir=../../../../bin/$P

	#export SHELL='sh -x'

	make clean
	make HOST_CC=gcc amalg Q=" " \
		LDFLAGS="$LDFLAGS" \
		CFLAGS="$CFLAGS" \
		DASM_XFLAGS="$DASM_XFLAGS"

	[ "$X0" ] || X0=$X; cp -f $X0 "$bindir/$X"
	[ "$D0" ] || D0=$D; cp -f $D0 "$bindir/$D"

	local J=$bindir/../../lua/jit
	mkdir -p $J
	cp -f jit/*.lua $J/
	rm -f $J/dis_mips*.lua
	rm -f $J/dis_arm*.lua
	rm -f $J/dis_ppc.lua
	cp -f jit/vmdef.lua $J/vmdef_$P.lua
	cp -f ../../vmdef.lua $J/vmdef.lua

	[ "$OSTYPE" = "msys" ] && {
		make clean
		make HOST_CC=gcc amalg Q=" " BUILDMODE=static \
			LDFLAGS="$LDFLAGS" \
			CFLAGS="$CFLAGS" \
			DASM_XFLAGS="$DASM_XFLAGS"
	}

	make clean
}

if [ "$OSTYPE" = "msys" ]; then
	export LUA_PATH_DEFAULT="!\\\\..\\\\..\\\\lua\\\\?.lua"
	export LUA_CPATH_DEFAULT="!\\\\clib\\\\?.dll"
	P=windows LDFLAGS="-s -static-libgcc" \
	X=luajit.exe D=lua51.dll A=luajit.a build
elif [ "${OSTYPE#darwin}" != "$OSTYPE" ]; then
	echo NYI
else
	export LUA_PATH_DEFAULT="!/../../lua/?.lua"
	export LUA_CPATH_DEFAULT="!/clib/?.so"
	P=linux CFLAGS="-pthread -DLJ_HASMEMPROF=1 -DLJ_HASRESOLVER=1" \
		LDFLAGS="-pthread -s -static-libgcc -Wl,--disable-new-dtags -Wl,-rpath,'\$\$ORIGIN'" \
		DASM_XFLAGS="-D LJ_HASMEMPROF"
		X=luajit D=libluajit.so A=libluajit.a build
fi
